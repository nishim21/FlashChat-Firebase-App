<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_focused="true"
        android:state_pressed="true">

        <shape android:shape="oval">

            <gradient
                android:startColor="#125049"
                android:endColor="#27877E" />

            <stroke
                android:width="0.1dp"
                android:color="#015950" />

        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="true">

        <shape android:shape="oval">

            <gradient
                android:startColor="#125049"
                android:endColor="#27877E" />

            <stroke
                android:width="0.1dp"
                android:color="#015950" />

        </shape>
    </item>

    <item>

        <shape android:shape="oval">

            <gradient
                android:startColor="#0C332F"
                android:endColor="#134944" />

            <stroke
                android:width="0.1dp"
                android:color="#015950" />

        </shape>
    </item>

</selector>